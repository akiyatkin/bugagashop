				},
				"SEARCHFORM":{
					"tplroot":"SEARCHFORM",
					"tpl":"-bugagashop/layout.tpl",
					"autosavename":"catalog"
				},
				
				"MAINMENU1":{
					"json":"-menu",
					"tpl":"-bugagashop/layout.tpl",
					"tplroot":"MAINMENU"
				},
				"MAINMENU2":{
					"json":"-menu",
					"tpl":"-bugagashop/layout.tpl",
